%h1 Listing people

%table
  %tr
    %th First name
    %th Last name
    %th Address 1
    %th Address 2
    %th City
    %th State
    %th Zip
    %th Height
    %th Weight
    %th Age
  - for person in @people 
    %tr
      %td=h person.first_name 
      %td=h person.last_name 
      %td=h person.address_1 
      %td=h person.address_2 
      %td=h person.city 
      %td=h person.state 
      %td=h person.zip 
      %td=h person.height 
      %td=h person.weight 
      %td=h person.age 
      %td= link_to 'Show', person 
      %td= link_to 'Edit', edit_person_path(person) 
      %td= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete 

= link_to 'New person', new_person_path 

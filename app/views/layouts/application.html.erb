<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
	<head>
		<title><%= @page_title || APP_CONFIG[:site_name] %></title>
		<meta http-equiv="content-type" content="text/xhtml; charset=utf-8" />
		<meta http-equiv="imagetoolbar" content="no" />
		<meta name="distribution" content="all" />
		<meta name="robots" content="all" />	
		<meta name="resource-type" content="document" />
		<meta name="MSSmartTagsPreventParsing" content="true" />
		<%= stylesheet_link_tag 'base', 'matchable' %>
		<%= javascript_include_tag :defaults %>
		
		  <link rel="stylesheet" href="http://dev.jquery.com/view/tags/ui/latest/themes/flora/flora.all.css" type="text/css" media="screen" title="Flora (Default)">
    <script type="text/javascript" src="http://dev.jquery.com/view/tags/ui/latest/ui/ui.core.js"></script>
    <script type="text/javascript" src="http://dev.jquery.com/view/tags/ui/latest/ui/ui.slider.js"></script>
    
		
		<script>
    $(document).ready(function(){
      //$(".matchable_slider").slider();

      $(".matchable_slider").each(function(i){
      });
     
      $(".matchable_slider").slider({
  			'slide': function(e, ui){
  			  var atr = "#" + $(this).attr('input_id'); 
  				$(atr).val(ui.value);
  				//alert($(e).attr('input_id'));
  			}
  		});
      
    });
    </script>
    
	</head>
	<body>
		<div id="container">
			<div id="header">
				<ul>
					<% if logged_in? %>
					<li><%= link_to 'Logout', logout_path %></li>
					<% else %>
					<li><%= link_to 'Login', login_path %></li>
					<li><%= link_to 'Signup', signup_path %></li>
					<% end %>
				</ul>
			</div>
			<div id="content">
				<%= flash_messages %>
				<%= yield :layout %>
			</div>
		</div>
	</body>
</html>